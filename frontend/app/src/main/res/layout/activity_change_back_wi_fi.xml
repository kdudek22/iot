<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".connecting.ChangeBackWiFi">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change back the WiFi so that you have connection with the internet, then press Continue."
        android:textAlignment="center"
        android:layout_marginTop="200dp"
        android:textSize="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changeWiFi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:text="Change WiFi"/>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/finishAddDevice"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="400dp"
    android:text="Continue"/>

</RelativeLayout>